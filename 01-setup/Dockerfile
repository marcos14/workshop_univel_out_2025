# ============================================
# DOCKERFILE - WORKSHOP LANGCHAIN + MCP + QDRANT
# ============================================
# Imagem Python com todas as depend√™ncias pr√©-instaladas

FROM python:3.11-slim

# Metadados da imagem
LABEL maintainer="Workshop Univel <workshop@univel.edu.br>"
LABEL description="Workshop LangChain + MCP + Qdrant - Ambiente Python"
LABEL version="0.1.0"

# Vari√°veis de ambiente para Python
ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PIP_NO_CACHE_DIR=1 \
    PIP_DISABLE_PIP_VERSION_CHECK=1

# Instala depend√™ncias do sistema
RUN apt-get update && apt-get install -y \
    curl \
    git \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

# Instala Poetry
RUN pip install poetry==1.7.1

# Configura Poetry para n√£o criar venv (j√° estamos em container)
RUN poetry config virtualenvs.create false

# Define diret√≥rio de trabalho
WORKDIR /app

# Copia arquivos de depend√™ncias
COPY pyproject.toml ./

# Instala depend√™ncias Python (apenas main, sem dev dependencies)
RUN poetry install --only main --no-interaction --no-ansi

# Copia c√≥digo da aplica√ß√£o
COPY . .

# Cria usu√°rio n√£o-root para seguran√ßa
RUN useradd --create-home --shell /bin/bash workshop && \
    chown -R workshop:workshop /app
USER workshop

# Define comando padr√£o
CMD ["python", "-c", "print('üéâ Workshop LangChain + MCP + Qdrant - Ambiente Python pronto!')"]